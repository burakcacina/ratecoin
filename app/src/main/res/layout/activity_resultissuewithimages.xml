<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/picture2">

    <View
        android:layout_width="fill_parent"
        android:layout_height="50dp"></View>

    <TextView
        android:id="@+id/issueDesc22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/rounded_border_edittext"
        android:backgroundTint="@android:color/transparent"
        android:gravity="center"
        android:text="DESCRIPTION"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Grey"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/IssueDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColorLink="@color/Palepurple" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="30dp"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="311dp"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/issueFirstimage"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/issueSecondimage"
            android:layout_gravity="center"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:adjustViewBounds="true"
            android:background="@drawable/my_custom_selector"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/optresult_1"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignEnd="@+id/issueFirstimage"
            android:layout_alignRight="@+id/issueFirstimage"
            android:layout_below="@+id/issueFirstimage"
            android:layout_marginEnd="49dp"
            android:layout_marginRight="49dp"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>

        <ImageView
            android:id="@+id/issueSecondimage"
            android:layout_width="170dp"
            android:layout_height="200dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:adjustViewBounds="true"
            android:background="@drawable/my_custom_selector"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/optresult_2"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/issueSecondimage"
            android:layout_marginRight="80dp"
            android:gravity="center"
            android:text=""
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@android:color/black"/>

    </RelativeLayout>

</LinearLayout>